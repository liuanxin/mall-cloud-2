<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <property name="FILE_PATH" value="${user.home}/logs/search-sync-test"/>
    <property name="SQL_PATTERN" value="%d [${PID:- } %t\\(%logger\\) : %p] %class.%method\\(%file:%line\\)%n%m%n%n"/>
    <property name="LOG_PATTERN" value="[%X{receiveTime}%d] [${PID:- } %t\\(%logger\\) : %p]%X{requestInfo} %class{30}#%method\\(%file:%line\\)%n%m%n%n"/>

    <appender name="PROJECT" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${FILE_PATH}.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${FILE_PATH}-%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>7</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
        </encoder>
    </appender>

    <appender name="SQL" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${FILE_PATH}-sql.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${FILE_PATH}-sql-%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>7</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>${SQL_PATTERN}</pattern>
        </encoder>
    </appender>


    <logger name="com.github.search.repository" level="warn"/>
    <logger name="com.github.common.mvc" level="warn"/>
    <!--<logger name="com.github" level="warn"/>-->
    <logger name="com.alibaba" level="warn"/>
    <logger name="com.sun" level="warn"/>

    <logger name="io.github" level="warn"/>

    <logger name="org.springframework" level="warn"/>
    <logger name="org.hibernate" level="warn"/>
    <logger name="org.mybatis" level="warn"/>
    <logger name="org.apache" level="warn"/>
    <logger name="org.I0Itec" level="warn"/>
    <logger name="org.jboss" level="warn"/>


    <logger name="sqlLog" level="debug" additivity="false">
        <appender-ref ref="SQL" />
    </logger>

    <root level="debug">
        <appender-ref ref="PROJECT"/>
    </root>
</configuration>
